<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_recyclerview"
    android:layout_marginRight="@dimen/margin_recyclerview"
    android:layout_marginTop="@dimen/margin_recyclerview"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardCornerRadius="@dimen/margin_recyclerview">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/margin_recyclerview"
        >

        <TextView
            android:id="@+id/item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_recyclerview"
            android:layout_weight="1"
            android:textSize="14sp"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="@dimen/with_image_recycler"
            android:layout_height="match_parent"
            android:src="@drawable/ic_garbage"
            android:layout_gravity="center"

             />
    </LinearLayout>
</android.support.v7.widget.CardView>